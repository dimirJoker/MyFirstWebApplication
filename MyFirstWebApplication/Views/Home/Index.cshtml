@model IEnumerable<MyFirstWebApplication.Models.ItemModel>

@* FOR DEBUGGING
<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new {id=item.Id}) |
					@Html.ActionLink("Details", "Details", new {id=item.Id}) |
					@Html.ActionLink("Delete", "Delete", new {id=item.Id})
				</td>
			</tr>
		}
	</tbody>
</table>
*@
<div class="container d-flex flex-wrap">
	<div class="container marketing">
		<div class="row">
			@if (Model != null)
			{
				@foreach (var item in Model)
				{
					<div class="col-lg-4 mx-auto">
						<img class="bd-placeholder-img rounded-circle" src="https://i.pravatar.cc/140?u=@item.Id" preserveaspectratio="xMidYMid slice" focusable="false" role="img" alt="@item.Name">
						<h2>@item.Name</h2>
